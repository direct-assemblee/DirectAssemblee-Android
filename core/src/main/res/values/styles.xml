<resources>

    <style name="TextView" />

    <style name="TextView.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:padding">@dimen/big_horizontal_space</item>
    </style>

    <style name="TextView.Title.Sub">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/horizontal_space</item>
    </style>

    <style name="TextView.Section">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.Section.Header">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextView.Section.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextView.URL">
        <item name="android:text">@string/read_more</item>
        <item name="android:textColor">@color/blueLight</item>
        <item name="android:padding">@dimen/vertical_space</item>
    </style>

    <style name="Separator">
        <item name="android:background">@color/separator</item>
    </style>

    <style name="Separator.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

</resources>