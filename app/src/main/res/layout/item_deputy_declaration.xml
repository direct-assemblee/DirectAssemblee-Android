<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDeclarationHeader"
            style="@style/TextView.Section.Header"
            android:padding="@dimen/horizontal_space"
            tools:text="DÃ©claration" />

        <View style="@style/Separator.Horizontal" />

        <TextView
            android:id="@+id/textViewDeclarationPlaceHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/horizontal_space"
            android:text="@string/deputy_details_no_declaration" />

        <org.ladlb.directassemblee.widget.SubView
            android:id="@+id/subViewDeclarationFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <org.ladlb.directassemblee.widget.SubView
            android:id="@+id/subViewDeclarationSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <org.ladlb.directassemblee.widget.SubView
            android:id="@+id/subViewDeclarationThird"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <org.ladlb.directassemblee.widget.MoreView
            android:id="@+id/moreView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>
