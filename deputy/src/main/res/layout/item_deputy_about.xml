<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewAbout"
            style="@style/TextView.Section.Header"
            android:padding="@dimen/horizontal_space"
            android:text="@string/deputy_details_about" />

        <View style="@style/Separator.Horizontal" />

        <org.ladlb.directassemblee.deputy.widget.SubView
            android:id="@+id/subViewJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:subViewTitle="@string/deputy_details_job" />

        <org.ladlb.directassemblee.deputy.widget.SubView
            android:id="@+id/subViewAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:subViewTitle="@string/deputy_details_age" />

        <org.ladlb.directassemblee.deputy.widget.SubView
            android:id="@+id/subViewParliamentAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:subViewTitle="@string/deputy_details_parliament_age" />

        <org.ladlb.directassemblee.deputy.widget.SubView
            android:id="@+id/subViewMandateStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:subViewContent="test"
            app:subViewTitle="@string/deputy_details_current_mandate_start_date" />

        <org.ladlb.directassemblee.deputy.widget.SubView
            android:id="@+id/subViewAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:subViewContent="test"
            app:subViewTitle="@string/deputy_details_salary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
